<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">

  <display-name>Inera Certificate</display-name>

  <context-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:/application-context.xml</param-value>
  </context-param>
  <context-param>
      <param-name>logbackConfigParameter</param-name>
      <param-value>certificate.logback.file</param-value>
  </context-param>

  <servlet-mapping>
    <servlet-name>jsp</servlet-name>
    <url-pattern>/version.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>cxf</servlet-name>
    <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>cxf</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <!-- Listener for external logback configuration file -->
  <listener>
      <listener-class>se.inera.intyg.common.util.logging.LogbackConfiguratorContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

