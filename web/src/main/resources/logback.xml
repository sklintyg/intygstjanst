<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="30 seconds">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{ISO8601} [%thread] %-5level %logger{10} - %msg%n</pattern>
    </encoder>
  </appender>

  <!--Daily rolling file appender -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <filter class="se.inera.certificate.logging.MarkerFilter">
        <marker>Validation</marker>
        <onMatch>DENY</onMatch>
        <onMismatch>ACCEPT</onMismatch>
    </filter>
    <file>${catalina.home}/logs/certificate.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${catalina.home}/logs/certificate.%d{yyyy-MM-dd}.log</fileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>%date{ISO8601} [%thread] %-5level %logger{10} - %msg%n</pattern>
    </encoder>
  </appender>

  <!--Daily rolling file appender for validation messages -->
  <appender name="VALIDATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <filter class="se.inera.certificate.logging.MarkerFilter">
        <marker>Validation</marker>
        <onMatch>ACCEPT</onMatch>
        <onMismatch>DENY</onMismatch>
    </filter>
    <file>${catalina.home}/logs/validation.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${catalina.home}/logs/validation.%d{yyyy-MM-dd}.log</fileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>%date{ISO8601} %-5level - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.springframework" level="WARN" />

  <logger name="org.hibernate" level="error" />

  <logger name="org.apache.cxf" level="error" />

  <logger name="se.inera.certificate" level="error" />

  <root>
    <level value="WARN" />
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
    <appender-ref ref="VALIDATION" />
  </root>

</configuration>
