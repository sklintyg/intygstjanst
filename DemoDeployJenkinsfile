#!groovy

def baseVersion = "3.4.0.*"

stage('checkout tools') {
    node {
        util.run {
            dir('base_tools') {
                git url: "https://github.com/sklintyg/tools.git", branch: "develop"
            }
        }
    }
}

stage('checkout intygstjanst') {
    node {
        git url: "https://github.com/sklintyg/intygstjanst.git", branch: GIT_BRANCH
        util.run { checkout scm }
    }
}

stage('run cleanup scripts') {
    node {
        util.run {
            dir('base_tools') {
                ansiblePlaybook(extraVars: [ansible_ssh_host: "164.40.180.105"], installation: 'ansible-yum',
                        inventory: 'ansible/inventory/intygstjanst/demo', playbook: 'ansible/cleanup.yml')
            }
        }
    }
}

stage('provision (tools)') {
    node {
        util.run {
            dir('base_tools') {
                ansiblePlaybook(extraVars: [ansible_ssh_host: "164.40.180.105"], installation: 'ansible-yum',
                        inventory: 'ansible/inventory/intygstjanst/demo', playbook: 'ansible/provision.yml')
            }
        }
    }
}

stage('provision') {
    node {
        util.run {
            ansiblePlaybook(extraVars: [ansible_ssh_host: "164.40.180.105", gitcrypt_key_file: "/home/jenkins/git-crypt4.key"],
                    installation: 'ansible-yum', inventory: 'ansible/inventory/intygstjanst/demo',
                    playbook: 'ansible/provision.yml')
        }
    }
}

stage('deploy') {
    node {
        util.run {
            def itVersion = util.latestVersion("se/inera/intyg/intygstjanst/intygstjanst-web", baseVersion)

            ansiblePlaybook(extraVars: [version: "${itVersion}", ansible_ssh_host: "164.40.180.105", deploy_from_repo: "true"],
                            installation: 'ansible-yum', inventory: 'ansible/inventory/intygstjanst/demo', playbook: 'ansible/deploy.yml')

            util.waitForServer('https://demo.intygstjanst.intygstjanster.se/inera-certificate/version.jsp')
        }
    }
}
