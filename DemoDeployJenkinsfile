#!groovy

def baseVersion = "3.2.*"

stage('checkout') {
    node {
        git url: "https://github.com/sklintyg/intygstjanst.git", branch: GIT_BRANCH
        util.run { checkout scm }
    }
}

stage('deploy') {
    node {
        withEnv(["BASE_VERSION=${baseVersion}"]) {
            util.run {
                def itVersion = sh (
                    script: 'curl -ks "https://build-inera.nordicmedtest.se/nexus/service/local/lucene/search?a=intygstjanst-web&v=${BASE_VERSION}&repositoryId=releases" | sed -nr "/^.*latestRelease>([0-9.]+)<.*/{s//\\1/p;q}"',
                                    returnStdout: true
                                    ).trim()

                sh (script: "/usr/local/bin/start_openconnect.sh eorsgren /home/jenkins/pwd")

                ansiblePlaybook extraVars: [version: "${itVersion}", ansible_ssh_port: "22", deploy_from_repo: "true"], \
                  installation: 'ansible-yum', inventory: 'ansible/inventory/intygstjanst/demo', playbook: 'ansible/deploy.yml'

                util.waitForServer('https://demo.intygstjanst.intygstjanster.se/version.jsp')

                sh (script: "/usr/local/bin/kill_openconnect.sh /tmp/oc.pid")
            }
        }
    }
}
