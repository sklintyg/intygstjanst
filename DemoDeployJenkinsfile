#!groovy

def baseVersion = "3.2.*"

stage('checkout') {
    node {
        git url: "https://github.com/sklintyg/intygstjanst.git", branch: GIT_BRANCH
        util.run { checkout scm }
    }
}

stage('deploy') {
    node {
        util.run {
            def itVersion = util.latestVersion("intygstjanst-web", baseVersion)

            ansiblePlaybook(extraVars: [version: "${itVersion}", ansible_ssh_host: "164.40.180.105", deploy_from_repo: "true"],
                            installation: 'ansible-yum', inventory: 'ansible/inventory/intygstjanst/demo', playbook: 'ansible/deploy.yml')

            util.waitForServer('https://demo.intygstjanst.intygstjanster.se/inera-certificate/version.jsp')
        }
    }
}
