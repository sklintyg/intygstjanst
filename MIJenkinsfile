#!groovy

def baseVersion = "3.1.*"

stage('checkout') {
    node {
        git url: "https://github.com/sklintyg/intygstjanst.git", branch: GIT_BRANCH
        util.run { checkout scm }
    }
}

stage('deploy test-IT') {
    node {
        withEnv(["BASE_VERSION=${baseVersion}"]) {
            def itVersion = sh (
                script: 'curl -ks "https://build-inera.nordicmedtest.se/nexus/service/local/lucene/search?a=intygstjanst-web&v=${BASE_VERSION}&repositoryId=releases" | sed -nr "/^.*latestRelease>([0-9.]+)<.*/{s//\\1/p;q}"',
                returnStdout: true
            ).trim()

            util.run {
                ansiblePlaybook extraVars: [version: "${itVersion}", ansible_ssh_port: "22", deploy_from_repo: "true"],  \
                     installation: 'ansible-yum', inventory: 'ansible/inventory/intygstjanst/test-mi', playbook: 'ansible/deploy.yml'
                util.waitForServer('https://minaintyg.inera.nordicmedtest.se/inera-certificate/version.jsp')
            }
        }
    }
}

stage('propagate') {
    build job: 'intyg-minaintyg-pipeline', wait: false, parameters: [[$class: 'StringParameterValue', name: 'GIT_BRANCH', value: GIT_BRANCH]]
}
