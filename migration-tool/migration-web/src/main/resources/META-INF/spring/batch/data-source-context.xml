<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
          http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<beans:description>Data source for the Intyg database</beans:description>

	<beans:bean id="intygDataSource" class="org.apache.commons.dbcp.BasicDataSource"
		p:driverClassName="${intyg.jdbc.driver}"
		p:url="${intyg.jdbc.url}"
		p:username="${intyg.jdbc.user}"
		p:password="${intyg.jdbc.password}" />
		
	<beans:bean id="intygTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
		p:dataSource-ref="intygDataSource"/>

</beans:beans>