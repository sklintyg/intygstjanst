<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
  xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
          http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <beans:description>Context for the data migration jobs
  </beans:description>

  <beans:bean id="certificateItemReader"
    class="org.springframework.batch.item.database.JdbcPagingItemReader"
    scope="step">
    <beans:property name="dataSource" ref="certificateDataSource" />
    <beans:property name="queryProvider">
      <beans:bean
        class="org.springframework.batch.item.database.support.SqlPagingQueryProviderFactoryBean">
        <beans:property name="dataSource" ref="certificateDataSource" />
        <beans:property name="selectClause"
          value="${certificate.reader.sql.select}" />
        <beans:property name="fromClause"
          value="${certificate.reader.sql.from}" />
        <beans:property name="whereClause"
          value="${certificate.reader.sql.where}" />
        <beans:property name="sortKey"
          value="${certificate.reader.sortkey}" />
      </beans:bean>
    </beans:property>
    <beans:property name="parameterValues">
      <beans:map>
        <beans:entry key="minId" value="#{stepExecutionContext[minValue]}" />
        <beans:entry key="maxId" value="#{stepExecutionContext[maxValue]}" />
      </beans:map>
    </beans:property>
    <beans:property name="pageSize" value="200" />
    <beans:property name="rowMapper">
      <beans:bean
        class="se.inera.certificate.migration.model.OriginalCertificateRowMapper" />
    </beans:property>
  </beans:bean>

  <beans:bean id="certificateItemWriter"
    class="org.springframework.batch.item.database.JdbcBatchItemWriter"
    scope="step">
    <beans:property name="dataSource" ref="certificateDataSource" />
    <beans:property name="sql" value="${certificate.writer.sql}" />
    <beans:property name="itemPreparedStatementSetter">
      <beans:bean
        class="se.inera.certificate.migration.model.CertificateItemPreparedStatementSetter" />
    </beans:property>
  </beans:bean>

  <beans:bean id="originalCertificateItemWriter"
    class="org.springframework.batch.item.database.JdbcBatchItemWriter"
    scope="step">
    <beans:property name="dataSource" ref="certificateDataSource" />
    <beans:property name="sql"
      value="${originalcertificate.writer.sql}" />
    <beans:property name="itemPreparedStatementSetter">
      <beans:bean
        class="se.inera.certificate.migration.model.OriginalCertificateUpdatePreparedStatementSetter" />
    </beans:property>
  </beans:bean>

  <beans:bean id="certificateCompositeItemWriter"
    class="org.springframework.batch.item.support.CompositeItemWriter"
    scope="step">
    <beans:property name="delegates">
      <beans:list>
        <beans:ref bean="certificateItemWriter" />
        <beans:ref bean="originalCertificateItemWriter" />
      </beans:list>
    </beans:property>
  </beans:bean>

  <beans:bean id="certificateCompositeItemProcessor"
    class="org.springframework.batch.item.support.CompositeItemProcessor"
    scope="step">
    <beans:property name="delegates">
      <beans:list>
        <beans:ref bean="extractCertificateIdProcessor" />
        <beans:ref bean="checkCertificateExistsProcessor" />
        <beans:ref bean="convertCertificateXMLToJSONProcessor" />
      </beans:list>
    </beans:property>
  </beans:bean>

  <beans:bean id="extractCertificateIdProcessor"
    class="se.inera.certificate.migration.processors.ExtractCertificateIdProcessor"
    init-method="init" scope="step" />

  <beans:bean id="checkCertificateExistsProcessor"
    class="se.inera.certificate.migration.processors.CheckCertificateExistsProcessor"
    scope="step">
    <beans:property name="certificateCheckSql" value="${certificate.check.sql}"/>
    <beans:property name="dataSource" ref="certificateDataSource" />
  </beans:bean>

  <beans:bean id="convertCertificateXMLToJSONProcessor"
    class="se.inera.certificate.migration.processors.ConvertCertificateXMLToJSONProcessor"
    scope="step">
    <beans:property name="converterRestServiceUrl"
      value="#{jobParameters['CONVERTER_SERVICE_URL']}" />
  </beans:bean>

</beans:beans>