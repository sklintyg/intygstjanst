<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
  xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
          http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <description>Certificate info model migration jobs
  </description>

  <batch:job id="certificateInfoModelMigrationJob"
    incrementer="jobIncrementer" restartable="false">
    <batch:description>Job for migrating Certificate info model</batch:description>

    <batch:step id="pingConversionServiceStep">
      <batch:tasklet ref="pingConverterServiceTasklet" />
      <batch:next on="COMPLETED" to="migrateCertificateInfoModelStep" />
      <batch:fail on="FAILED" />
    </batch:step>

    <batch:step id="migrateCertificateInfoModelStep">
      <batch:tasklet>
        <batch:chunk reader="infoMigrStep1Reader"
          processor="convertCertificateXMLToJSONProcessor" writer="infoMigrStep1Writer"
          commit-interval="${infomigr.step1.reader.commit.interval}">
        </batch:chunk>
        <batch:listeners>
          <batch:listener>
            <bean
              class="se.inera.certificate.migration.listeners.CertificateProcessingItemListener" />
          </batch:listener>
        </batch:listeners>
      </batch:tasklet>
      <batch:fail on="FAILED" />
      <batch:end on="*" />
    </batch:step>

  </batch:job>

  <bean id="pingConverterServiceTasklet"
    class="se.inera.certificate.migration.task.PingConverterServiceTasklet"
    scope="step">
    <property name="converterRestServiceUrl" value="#{jobParameters['CONVERTER_SERVICE_URL']}" />
  </bean>

</beans>