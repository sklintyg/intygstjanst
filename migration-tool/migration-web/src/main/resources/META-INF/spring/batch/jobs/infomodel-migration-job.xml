<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
  xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
          http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <description>Certificate info model migration jobs
  </description>

  <batch:job id="certificateInfoModelMigrationJob"
    incrementer="jobIncrementer" restartable="false">
    <batch:description>Job for migrating Certificate info model</batch:description>
    <batch:step id="pingConversionServiceStep">
      <batch:tasklet ref="pingConverterServiceTasklet" />
      <batch:next on="*"
        to="certificateInfoModelProcessingStep.master" />
      <batch:fail on="FAILED" />
    </batch:step>
    <batch:step id="certificateInfoModelProcessingStep.master">
      <batch:partition step="certificateInfoModelProcessingStep"
        partitioner="columnRangePartitioner" handler="certificatePartitioningHandler" />
    </batch:step>
  </batch:job>

  <bean id="pingConverterServiceTasklet"
    class="se.inera.certificate.migration.task.PingConverterServiceTasklet"
    scope="step">
    <property name="converterRestServiceUrl"
      value="#{jobParameters['CONVERTER_SERVICE_URL']}" />
  </bean>

  <bean id="jobIncrementer"
    class="org.springframework.batch.core.launch.support.RunIdIncrementer" />

  <batch:step id="certificateInfoModelProcessingStep">
    <batch:tasklet transaction-manager="certificateTransactionManager">
      <batch:chunk reader="certificateItemReader"
        processor="certificateCompositeItemProcessor" writer="certificateCompositeItemWriter"
        commit-interval="20" retry-limit="3">
        <batch:retryable-exception-classes>
          <batch:include
            class="se.inera.certificate.migration.processors.CertificateProcessingException" />
        </batch:retryable-exception-classes>
      </batch:chunk>
      <batch:listeners>
        <batch:listener>
          <bean
            class="se.inera.certificate.migration.listeners.CertificateProcessingItemListener" />
        </batch:listener>
      </batch:listeners>
    </batch:tasklet>
    <batch:fail on="FAILED" />
    <batch:end on="*" />
  </batch:step>
  
    <bean id="certificatePartitioningHandler"
    class="org.springframework.batch.core.partition.support.TaskExecutorPartitionHandler">
    <property name="taskExecutor" ref="certificateTaskExecutor" />
    <property name="step"
      ref="certificateInfoModelProcessingStep" />
    <property name="gridSize" value="5" />
  </bean>

  <bean id="columnRangePartitioner"
    class="se.inera.certificate.migration.partition.ColumnRangePartitioner">
    <property name="table" value="ORIGINAL_CERTIFICATE" />
    <property name="column" value="id" />
    <property name="dataSource" ref="certificateDataSource" />
  </bean>

  <bean id="certificateTaskExecutor"
    class="org.springframework.core.task.SimpleAsyncTaskExecutor" />

</beans>