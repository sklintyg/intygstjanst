<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
  xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
          http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <bean id="certificateItemReader"
    class="org.springframework.batch.item.database.JdbcPagingItemReader"
    scope="step">
    <property name="dataSource" ref="certificateDataSource" />
    <property name="queryProvider">
      <bean
        class="org.springframework.batch.item.database.support.SqlPagingQueryProviderFactoryBean">
        <property name="dataSource" ref="certificateDataSource" />
        <property name="selectClause"
          value="${certificate.reader.sql.select}" />
        <property name="fromClause"
          value="${certificate.reader.sql.from}" />
        <property name="whereClause"
          value="${certificate.reader.sql.where}" />
        <property name="sortKey"
          value="${certificate.reader.sortkey}" />
      </bean>
    </property>
    <property name="parameterValues">
      <map>
        <entry key="minId" value="#{stepExecutionContext[minValue]}" />
        <entry key="maxId" value="#{stepExecutionContext[maxValue]}" />
      </map>
    </property>
    <property name="pageSize" value="200" />
    <property name="rowMapper">
      <bean
        class="se.inera.certificate.migration.model.OriginalCertificateRowMapper" />
    </property>
  </bean>

  <bean id="certificateItemWriter"
    class="org.springframework.batch.item.database.JdbcBatchItemWriter"
    scope="step">
    <property name="dataSource" ref="certificateDataSource" />
    <property name="sql" value="${certificate.writer.sql}" />
    <property name="itemPreparedStatementSetter">
      <bean
        class="se.inera.certificate.migration.model.CertificateItemPreparedStatementSetter" />
    </property>
  </bean>

  <bean id="originalCertificateItemWriter"
    class="org.springframework.batch.item.database.JdbcBatchItemWriter"
    scope="step">
    <property name="dataSource" ref="certificateDataSource" />
    <property name="sql"
      value="${originalcertificate.writer.sql}" />
    <property name="itemPreparedStatementSetter">
      <bean
        class="se.inera.certificate.migration.model.OriginalCertificateUpdatePreparedStatementSetter" />
    </property>
  </bean>

  <bean id="certificateCompositeItemWriter"
    class="org.springframework.batch.item.support.CompositeItemWriter"
    scope="step">
    <property name="delegates">
      <list>
        <ref bean="certificateItemWriter" />
        <ref bean="originalCertificateItemWriter" />
      </list>
    </property>
  </bean>

  <bean id="certificateCompositeItemProcessor"
    class="org.springframework.batch.item.support.CompositeItemProcessor"
    scope="step">
    <property name="delegates">
      <list>
        <ref bean="extractCertificateIdProcessor" />
        <ref bean="checkCertificateExistsProcessor" />
        <ref bean="convertCertificateXMLToJSONProcessor" />
      </list>
    </property>
  </bean>

  <bean id="extractCertificateIdProcessor"
    class="se.inera.certificate.migration.processors.ExtractCertificateIdProcessor"
    init-method="init" scope="step" />

  <bean id="checkCertificateExistsProcessor"
    class="se.inera.certificate.migration.processors.CheckCertificateExistsProcessor"
    scope="step">
    <property name="certificateCheckSql" value="${certificate.check.sql}" />
    <property name="dataSource" ref="certificateDataSource" />
  </bean>

  <bean id="convertCertificateXMLToJSONProcessor"
    class="se.inera.certificate.migration.processors.ConvertCertificateXMLToJSONProcessor"
    scope="step">
    <property name="converterRestServiceUrl"
      value="#{jobParameters['CONVERTER_SERVICE_URL']}" />
  </bean>
  
</beans>