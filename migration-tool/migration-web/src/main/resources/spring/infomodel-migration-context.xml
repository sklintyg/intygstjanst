  <bean id="infoMigrStep2Writer" class="se.inera.certificate.migration.writers.SendCertificateWriter" />
  
  <bean id="sendCertificateConverter" class="se.inera.certificate.migration.converter.SendCertificateConverterImpl" />

  <bean id="convertCertificateXMLToJSONProcessor"
    class="se.inera.certificate.migration.processors.ConvertCertificateXMLToJSONProcessor"
    scope="step">
    <property name="converterRestServiceUrl"
      value="#{jobParameters['CONVERTER_SERVICE_URL']}" />
  </bean>
  
