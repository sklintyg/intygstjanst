<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
          http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<beans:description>Test data source for the simulated Intyg database</beans:description>
	
	<jdbc:initialize-database data-source="intygDataSource">
        <jdbc:script location="${intyg.schema.script}"/>
    </jdbc:initialize-database>
	
	<beans:bean id="intygDataSource" class="org.apache.commons.dbcp.BasicDataSource"
		p:driverClassName="${intyg.jdbc.driver}"
		p:url="${intyg.jdbc.url}"
		p:username="${intyg.jdbc.user}"
		p:password="${intyg.jdbc.password}" />
	
	<beans:bean id="intygTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
		p:dataSource-ref="intygDataSource"/>
	
	<jdbc:initialize-database data-source="dataSource">
		<jdbc:script location="${batch.drop.script}" />
		<jdbc:script location="${batch.schema.script}" />
	</jdbc:initialize-database>
	
	<beans:bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		p:driverClassName="${batch.jdbc.driver}" 
		p:url="${batch.jdbc.url}"
		p:username="${batch.jdbc.user}" 
		p:password="${batch.jdbc.password}" />
	
	<beans:bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
		p:dataSource-ref="dataSource"/>	

</beans:beans>