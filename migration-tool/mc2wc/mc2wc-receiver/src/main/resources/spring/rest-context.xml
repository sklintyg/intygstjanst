<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

  <description>REST services context</description>

  <import resource="classpath:/META-INF/cxf/cxf.xml" />
  <import resource="classpath:/META-INF/cxf/cxf-servlet.xml" />

  <jaxrs:server address="/" id="migrationREST">
    <jaxrs:serviceBeans>
      <ref bean="migrationReceiverBean" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

  <bean id="jaxbProvider" class="org.apache.cxf.jaxrs.provider.JAXBElementProvider">
  </bean>

  <bean id="migrationReceiverBean"
        class="se.inera.certificate.mc2wc.rest.MigrationReceiverBean" />

</beans>