<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:batch="http://www.springframework.org/schema/batch"
  xsi:schemaLocation="
          http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
          http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <jdbc:initialize-database data-source="batchDataSource">
    <jdbc:script
      location="classpath:/org/springframework/batch/core/schema-h2.sql" />
  </jdbc:initialize-database>

  <jdbc:embedded-database id="batchDataSource"
    type="H2" />

  <bean id="executor" class="org.springframework.core.task.SimpleAsyncTaskExecutor" />

  <batch:job-repository id="migrationJobRepository"
    data-source="batchDataSource" transaction-manager="batchTransactionManager" />

  <bean id="migrationJobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
    <property name="jobRepository" ref="migrationJobRepository"/>
    <property name="taskExecutor" ref="executor" />
  </bean>

  <bean id="batchTransactionManager"
    class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="batchDataSource" />
  </bean>

</beans>