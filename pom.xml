<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>se.inera.intyg.common</groupId>
    <artifactId>common-pom</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <groupId>se.inera.intyg.intygstjanst</groupId>
  <artifactId>intygstjanst</artifactId>
  <version>1.3-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Intygstj√§nsten</name>

  <properties>

    <!-- Common -->
    <common-support.version>1.0-SNAPSHOT</common-support.version>
    <common-web.version>1.0-SNAPSHOT</common-web.version>
    <integration-util.version>1.0-SNAPSHOT</integration-util.version>
    <logging-util.version>1.1.3-SNAPSHOT</logging-util.version>

    <!-- Intygstyper -->
    <fk7263.version>1.0-SNAPSHOT</fk7263.version>
    <ts-bas.version>1.0-SNAPSHOT</ts-bas.version>
    <ts-diabetes.version>1.0-SNAPSHOT</ts-diabetes.version>

    <!-- Schemas -->
    <schemas.version>1.0-SNAPSHOT</schemas.version>

    <!-- Tools -->
    <anonymisering.version>1.0.1</anonymisering.version>
    <liquibase-runner.version>1.0-SNAPSHOT</liquibase-runner.version>

    <checkstyle.basedir>${project.basedir}</checkstyle.basedir>
  </properties>

  <modules>
    <module>module-api</module>
    <module>persistence</module>
    <module>specifications</module>
    <module>web</module>
    <module>tools/ianonymisering</module>
    <module>tools/liquibase-runner</module>
  </modules>

  <scm>
    <connection>scm:git:https://github.com/sklintyg/intygstjanst.git</connection>
    <tag>HEAD</tag>
  </scm>

  <dependencyManagement>
    <dependencies>

      <dependency>
        <groupId>${project.parent.groupId}</groupId>
        <artifactId>module-api</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>${project.parent.groupId}</groupId>
        <artifactId>intygstjanst-persistence</artifactId>
        <version>${project.version}</version>
      </dependency>

      <!-- Common -->
      <dependency>
        <groupId>se.inera.intyg.common</groupId>
        <artifactId>common-support</artifactId>
        <version>${common-support.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.intyg.common</groupId>
        <artifactId>common-web</artifactId>
        <version>${common-web.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.intyg.common</groupId>
        <artifactId>integration-util</artifactId>
        <version>${integration-util.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.intyg.common</groupId>
        <artifactId>logging-util</artifactId>
        <version>${logging-util.version}</version>
      </dependency>

      <!-- Intygstyper -->
      <dependency>
        <groupId>se.inera.intyg.intygstyper</groupId>
        <artifactId>fk7263</artifactId>
        <version>${fk7263.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.intyg.intygstyper</groupId>
        <artifactId>ts-bas</artifactId>
        <version>${ts-bas.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.intyg.intygstyper</groupId>
        <artifactId>ts-diabetes</artifactId>
        <version>${ts-diabetes.version}</version>
      </dependency>

      <!-- Schemas -->
      <dependency>
        <groupId>se.inera.intyg.schemas</groupId>
        <artifactId>intygstjanst-schemas</artifactId>
        <version>${schemas.version}</version>
      </dependency>

      <!-- Tools -->
      <dependency>
        <groupId>se.inera.intyg.tools</groupId>
        <artifactId>anonymisering</artifactId>
        <version>${anonymisering.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.intyg.tools</groupId>
        <artifactId>liquibase-runner</artifactId>
        <version>${liquibase-runner.version}</version>
      </dependency>

    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jcl-over-slf4j</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>log4j-over-slf4j</artifactId>
    </dependency>

    <!-- Test dependencies -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>prepare-agent</id>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
          </execution>
          <execution>
            <id>report</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>report</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>callista-release</id>
      <url>https://${repository.host}/release/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>callista-snapshot</id>
      <url>https://${repository.host}/snapshot/</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>thirdparty</id>
      <url>https://${repository.host}/3rdparty</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

</project>
